<div class="frame">
  <div class="image">
    <img src="{{imgfile}}" />
  </div>
  <div class="overlay">
    <div class="toggle" data-value="markup"></div>
    <div class="toggle" data-value="fullscreen"></div>
    <div class="zoom">
      <div class="thumbnail">
        <div class="frame">
          <div class="region"></div>
          <img src="{{thumbnail_file}}" draggable="false" style="-moz-user-select: none;">
        </div>
      </div>
      <div class="controls">
        <input type="text" value="100%" />
        <input type="range" name="points" step="10" min="100" max="500">
      </div>
    </div>
  </div>
</div>